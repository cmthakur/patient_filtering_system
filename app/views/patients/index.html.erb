<div class='header'>
  <div class="title"> Listing All Patients Applied For The Trial</div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.full_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= link_to 'View Exam', '#', :class => 'view_result' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<!-- Light box for patient answer comparision -->

<div style="display:none">
  <div class='comparision'>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Question</th>
          <th>Expected Answer</th>
          <th>Patient Answer</th>
          <th>Remark</th>
        </tr>
      </thead>
      <tbody>
        <% Patient.last.result.each_pair do |key, value| %>
        <tr>
          <td><%= key %></td>
          <td><%= value[0] %></td>
          <td><%= value[1] %></td>
          <td><%= value[2] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>

$('.view_result').click(function(){
    $.fancybox($(".comparision").html(),{
    'transitionIn'  : 'elastic',
    'transitionOut' : 'elastic',
    'speedIn'     : 400,
    'speedOut'    : 200,
    'overlayShow' : true
  });
})
</script>